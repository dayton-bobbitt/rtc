{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "newLine": "LF",
        "outDir": "lib",
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}